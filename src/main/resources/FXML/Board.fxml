<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="boardAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LogicCircuitSimulator.FxGUI.Board.BoardController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane>
               <children>
                  <VBox alignment="TOP_CENTER" minWidth="200.0" prefWidth="200.0" style="-fx-background-color: #2b2e3e;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" onMousePressed="#logoOnMousePressed" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../other/logo_low_res.png" />
                           </image>
                           <VBox.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </VBox.margin>
                        </ImageView>
                        <Label style="-fx-text-fill: #FFF;" styleClass="indieFlowerFont" stylesheets="@../stylesheets/MainStylesheet.css" text="GATES">
                           <font>
                              <Font size="33.0" />
                           </font>
                        </Label>
                        <HBox>
                           <children>
                              <Label onMouseClicked="#clkOnMouseClick" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="CLK" />
                              <Label onMouseClicked="#bfrOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="BFR" />
                              <Label layoutX="110.0" layoutY="10.0" onMouseClicked="#oneOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="ONE" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="172.0">
                           <children>
                              <Label onMouseClicked="#notOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="NOT" />
                              <Label onMouseClicked="#orOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="OR" />
                              <Label layoutX="110.0" layoutY="10.0" onMouseClicked="#andOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="AND" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="210.0">
                           <children>
                              <Label onMouseClicked="#xorOnMouseClicked" style="-fx-text-fill: #FFF;" styleClass="toolboxLogicGateLabel" stylesheets="@../stylesheets/MainStylesheet.css" text="XOR" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </HBox>
      <fx:include fx:id="simulation" source="SimulationCanvas.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
